<% layout('../layouts/boilerplate')
   %>

    <h1 class="text-center my-5">Edit Profile <%= username
            %>
    </h1>

    <div class="row mb-5">
        <div class="col-10 border border-dark offset-1 py-3 px-5">
            <form action="/updateProfile?_method=PUT"
                  method="post"
                  novalidate
                  class="validated-form">

                <div class="row">
                    <div class="col-6">
                        <label for="fname"
                               class="form-label">First name: </label>
                        <input type="text"
                               id="fname"
                               class="form-control"
                               placeholder="Your First name"
                               name="fname"
                               value= "<%= user.fname %> "
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="mb-3 col-6">
                        <label for="lname"
                               class="form-label">Last name:</label>
                        <input type="text"
                               class="form-control"
                               id="lname"
                               name="lname"
                               placeholder="Your Last name"
                               value= "<%= user.lname %> "
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <label for="sex"
                               class="form-label">Sex: </label>
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="sex"
                                       id="male"
                                       value="male"
                                       <% if(user.sex === 'male') {%>
                                        checked
                                        <% } %>  
                                       required>
                                <label class="form-check-label"
                                       for="male">
                                    Male
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="sex"
                                       id="female"
                                       value="female"
                                       <% if(user.sex === 'female') {%>
                                        checked
                                        <% } %>  
                                       required>
                                <label class="form-check-label"
                                       for="female">
                                    Female
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <label for="phone"
                               class="form-label">Phone :</label>
                        <input type="phone"
                               id="phone"
                               class="form-control"
                               placeholder="Phone number"
                               value= <%= user.phone %> 
                               name="phone"
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-6 my-3">
                        <label for="street"
                               class="form-label">Street/area :</label>
                        <input type="text"
                               id="street"
                               class="form-control"
                               placeholder="Street"
                               value= "<%= user.street %> "
                               name="street"
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="col-6 my-3">
                        <label for="city"
                               class="form-label">City :</label>
                        <input type="text"
                               id="city"
                               class="form-control"
                               name="city"
                               placeholder="City"
                               value= "<%= user.city %> "
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="col-6 mb-3">
                        <label for="state"
                               class="form-label">State :</label>
                        <input type="text"
                               id="state"
                               placeholder="State"
                               class="form-control"
                               name="state"
                               value= "<%= user.state %> "
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="col-6 mb-3">
                        <label for="pin"
                               class="form-label">Pincode :</label>
                        <input type="number"
                               id="pin"
                               placeholder="Pincode"
                               name="pincode"
                               class="form-control"
                               value= <%= user.pincode %> 
                               required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button class="btn btn-success">Update Profile!</button>
                    <span>Back to <a style="text-decoration: none;"
                           href='/'>Home!</a></span>
                </div>
            </form>
        </div>
    </div>